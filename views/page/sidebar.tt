<aside class="what-next">
<h2>What next?</h2>
<ul class="row-fluid tinytext">
  <li class="span4">
	  <h4>Related links</h4>
		[% IF page.related %]
			<ul>
			[% FOR ln IN page.related.split("\n") %]
				<li>[% bits = ln.split("\\|") %] 
						[% title = bits.shift %] 
						[% href = bits.shift %]
						<a href="[% href %]">[% title %]</a></li>
			[% END %]
			</ul>
		[% END %]
	  <h4>Tags</h4>
		[% INCLUDE page/tags.tt %]
	</li>
	<li class="span4">
		<h4>Recently in [% page.parent.title %]</h4>
		[% IF page.parent.recent_children %]
		<ul>
			[% FOR pg IN page.parent.recent_children.slice(0,4) %]
			  [% IF pg %]
					<li><a href="[% pg.link %]">[% pg.title %]</a></li>
				[% END %]
			[% END %]
		</ul>
		<p><a class="btn btn-dark" href="[% parent_url %]/archive/1">More &raquo;</a></p>
		[% END %]
	</li>
  <li class="span4">
	  <h4>Where am I?</h4>
		[% INCLUDE page/navtree.tt %]
	</li>

</ul>
</aside>
