<!--t:tag/list-->
[% IF tags.size %]
<header>
	<h1>All Tags</h1>
</header>
<article>
<ul>
	[% FOREACH tag IN tags %]
		[% pc = tag.get_column('page_count') %]
		[% wc = tag.get_column('writing_count') %]
		[% entries = pc+wc %]
		<li>[% tag.title %]: [% entries %]</li>
	[% END %]
</ul>
</article>
[% ELSE %]
	<h1>No tags. Apparently.</h1>
[% END %]
<!--/tag/list-->
